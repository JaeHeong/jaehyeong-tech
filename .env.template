# ================================================
# MSA Environment Variables Template
# ================================================
# Copy this file to .env and fill in the values
# ================================================

# ================================================
# Auth Service
# ================================================
AUTH_SERVICE_PORT=3001
AUTH_SERVICE_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/auth_db
AUTH_SERVICE_GOOGLE_CLIENT_ID=your-google-client-id
AUTH_SERVICE_GOOGLE_CLIENT_SECRET=your-google-client-secret

# ================================================
# Blog Service
# ================================================
BLOG_SERVICE_PORT=3002
BLOG_SERVICE_DATABASE_URL=postgresql://postgres:postgres@localhost:5433/blog_db

# ================================================
# Comment Service
# ================================================
COMMENT_SERVICE_PORT=3003
COMMENT_SERVICE_DATABASE_URL=postgresql://postgres:postgres@localhost:5434/comment_db

# ================================================
# Page Service
# ================================================
PAGE_SERVICE_PORT=3004
PAGE_SERVICE_DATABASE_URL=postgresql://postgres:postgres@localhost:5437/page_db

# ================================================
# Analytics Service
# ================================================
ANALYTICS_SERVICE_PORT=3005
ANALYTICS_SERVICE_DATABASE_URL=postgresql://postgres:postgres@localhost:5436/analytics_db

# ================================================
# Storage Service
# ================================================
STORAGE_SERVICE_PORT=3006
STORAGE_SERVICE_DATABASE_URL=postgresql://postgres:postgres@localhost:5435/storage_db
STORAGE_SERVICE_OCI_REGION=ap-seoul-1
STORAGE_SERVICE_OCI_NAMESPACE=your-oci-namespace
STORAGE_SERVICE_OCI_BUCKET=jaehyeong-tech
STORAGE_SERVICE_OCI_ACCESS_KEY=your-oci-access-key
STORAGE_SERVICE_OCI_SECRET_KEY=your-oci-secret-key

# ================================================
# RabbitMQ
# ================================================
RABBITMQ_URL=amqp://admin:admin@localhost:5672
RABBITMQ_MANAGEMENT_URL=http://localhost:15672

# ================================================
# Redis
# ================================================
REDIS_URL=redis://localhost:6379

# ================================================
# Super Admin (for Tenant creation)
# ================================================
SUPER_ADMIN_API_KEY=change-this-to-secure-random-string

# ================================================
# Node Environment
# ================================================
NODE_ENV=development
LOG_LEVEL=debug

# ================================================
# Kong Gateway (if running locally)
# ================================================
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000
