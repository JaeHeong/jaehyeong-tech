generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Site visitor tracking (unique visitors per day per tenant)
// - Logged-in users: ipHash = "user:{userId}" for user-based deduplication
// - Anonymous users: ipHash = IP hash for IP-based deduplication
model SiteVisitor {
  id        String   @id @default(cuid())
  tenantId  String
  ipHash    String // "user:{userId}" for logged-in, IP hash for anonymous
  userId    String? // Optional: user ID for logged-in users (for auditing)
  date      DateTime @db.Date // Date only (no time) for daily counting
  createdAt DateTime @default(now())

  @@unique([tenantId, ipHash, date]) // One entry per identifier per day per tenant
  @@index([tenantId, date])
  @@index([tenantId, userId])
  @@map("site_visitors")
}

// Bug report model
model BugReport {
  id            String            @id @default(cuid())
  tenantId      String
  title         String
  description   String
  category      BugReportCategory
  priority      BugReportPriority @default(MEDIUM)
  status        BugReportStatus   @default(OPEN)
  email         String? // Optional contact email
  ipHash        String? // For spam prevention
  adminResponse String? // Admin response/comment
  respondedAt   DateTime? // When admin responded
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([tenantId, status])
  @@index([tenantId, category])
  @@index([tenantId, createdAt])
  @@map("bug_reports")
}

// Enums
enum BugReportCategory {
  UI
  FUNCTIONAL
  PERFORMANCE
  SECURITY
  ETC
}

enum BugReportPriority {
  LOW
  MEDIUM
  HIGH
}

enum BugReportStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}
