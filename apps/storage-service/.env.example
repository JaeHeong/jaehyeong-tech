# Server
PORT=3006
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5435/storage_db

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@localhost:5672

# OCI Object Storage
OCI_REGION=ap-seoul-1
OCI_NAMESPACE=your-oci-namespace
OCI_BUCKET=jaehyeong-tech
OCI_ACCESS_KEY=your-oci-access-key
OCI_SECRET_KEY=your-oci-secret-key

# CDN (Optional - Cloudflare Workers proxy)
# CDN_DOMAIN=cdn01.jaehyeong.com

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,video/mp4
